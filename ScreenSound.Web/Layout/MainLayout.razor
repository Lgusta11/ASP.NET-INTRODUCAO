@inherits LayoutComponentBase

<MudThemeProvider Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <!-- Barra de Navegação -->
    <MudAppBar Color="Color.Primary" Fixed="true" Elevation="3">
        <MudImage Src="images/screensound-logo.png" Class="logo"></MudImage>
        <MudIconButton Icon="@Icons.Filled.Menu" OnClick="ToggleDrawer" Class="ml-auto d-md-none"></MudIconButton>
    </MudAppBar>

    <!-- Menu Lateral (Drawer) -->
    <MudDrawer Open="@drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="3" Variant="DrawerVariant.Responsive" Breakpoint="Breakpoint.Md" Class="custom-drawer">
        <NavMenu></NavMenu>
    </MudDrawer>

    <!-- Conteúdo Principal -->
    <MudMainContent class="main-content pa-10">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // Fields and Properties
    private bool drawerOpen = true;
    private MudTheme currentTheme = new MudTheme()
        {
            Palette = ScreendsoundPallete.CreatePallete
        };

    // Methods
    void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }
}
